<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/american_pastel_skin"
    >

    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="EDIT YOUR\nTASKS: "
        android:fontFamily="@font/pix"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        >
        <EditText
            android:id="@+id/tbAddTitleUpd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="30pt"
            android:hint="Task Title"
            android:textSize="20dp"
            android:padding="8dp"
            android:fontFamily="@font/pix"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/datelabelbg"
            />

        <EditText
            android:id="@+id/tbDateLabelUpd"
            android:layout_width="match_parent"
            android:layout_below="@id/tbAddTitleUpd"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/datelabelbg"
            android:enabled="false"
            android:fontFamily="@font/pix"
            android:hint="@string/select_date"
            android:padding="8dp"
            android:textColor="#262626"
            android:textColorHint="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnSelectDateUpd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@id/tbDateLabelUpd"
            android:layout_marginEnd="6dp"
            android:background="@null"
            android:layout_marginTop="127dp"
            android:src="@drawable/baseline_calendar_month_24" />

        <EditText
            android:id="@+id/tbTimeLabelUpd"
            android:layout_width="match_parent"
            android:layout_below="@id/tbDateLabelUpd"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/datelabelbg"
            android:enabled="false"
            android:fontFamily="@font/pix"
            android:hint="Set Time "
            android:padding="8dp"
            android:textColor="#262626"
            android:textColorHint="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnSelectTimeUpd"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="202dp"
            android:layout_alignEnd="@id/tbTimeLabelUpd"
            android:layout_marginStart="314dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/baseline_access_time_24" />

        <ScrollView
            android:layout_below="@id/tbTimeLabelUpd"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="8dp"
                android:id="@+id/todo_list_containerUpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:padding="16dp"
                    android:id="@+id/todo_inputUpd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Task Name"
                    android:textSize="20dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pix"
                    android:background="@drawable/datelabelbg"
                    android:singleLine="true" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>